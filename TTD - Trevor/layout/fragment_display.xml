<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context="groupn.tcss450.uw.edu.officialtaco.DisplayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/displaytitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"/>

        <TextView
            android:id="@+id/displayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displayratingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating:"/>

        <TextView
            android:id="@+id/displayRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displayphoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number:" />

        <TextView
            android:id="@+id/displayPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displaytypesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types:" />

        <TextView
            android:id="@+id/displayTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displayhoursLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours:" />

        <TextView
            android:id="@+id/displayHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displayurlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL:" />

        <TextView
            android:id="@+id/displayUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displaywebLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website:"/>

        <TextView
            android:id="@+id/displayWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displayaddLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"/>

        <TextView
            android:id="@+id/displayAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
