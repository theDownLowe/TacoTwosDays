<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="group2.tcss450.uw.edu.official_tacotwosdays.home.SearchFragment">

    <TextView
        android:id="@+id/getRuserLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/getRuserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/getRsearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by ID:"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/getRsearchText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/getRsearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/getRloclabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Location:" />

        <EditText
            android:id="@+id/getRloctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/getRtypetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/getRtypelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:layout_column="0"
            android:layout_row="1"/>

        <Button
            android:id="@+id/getRbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_column="0"
            android:layout_row="2"/>

    </GridLayout>

</LinearLayout>
